@page "/"
@namespace ShopPilet
@inject IDialogService _dialogService

<MudContainer>
    <MudButton class="mt-4" Color="Color.Primary" Variant="Variant.Filled" OnClick=@OpenDialog>Open dialog to show the extension</MudButton>
    <h3 class="mt-4">The extension does work here:</h3>
    <Extension Name="DialogExtensionSlot" />
</MudContainer>

@code{
    void OpenDialog(){
        _dialogService.Show<SomeDialog>("Some dialog");
    }
}